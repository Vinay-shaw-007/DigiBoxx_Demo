<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--Components-->

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#FCFDFF</item>
        <item name="iconTint">@null</item>
        <item name="android:padding">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!--Button-->
    <style name="Widget.MyTheme.Button" parent="Widget.Material3.Button">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.BodyLarge</item>
    </style>

    <!--Button-->
    <style name="Widget.MyTheme.Button.Alert" parent="Widget.Material3.Button">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.BodyLarge</item>
        <item name="android:textColor">@color/color_alert</item>
        <item name="android:backgroundTint">@color/light_alert_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="strokeColor">@color/color_alert</item>
    </style>

    <!--Outline Button-->
    <style name="Widget.MyTheme.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.BodyLarge</item>
    </style>

    <!--Text Button-->
    <style name="Widget.MyTheme.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.BodyLarge</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Widget.MyTheme.Button.TextButton.Disabled" parent="Widget.Material3.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.BodyMedium.Disabled</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="iconTint">@color/grayDark</item>
    </style>
    <style name="Custom.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/transparent</item>
        <item name="background">@color/transparent</item>
    </style>
    <!--Card-->
    <!--    <style name="Widget.MyTheme.Card" parent="Widget.Material3.Button.TextButton">
            <item name="textAllCaps">false</item>
            <item name="android:textAppearance">@style/TextAppearance.MyApp.BodyLarge</item>
            <item name="android:paddingTop">10dp</item>
            <item name="android:paddingBottom">10dp</item>
        </style>-->

    <style name="Widget.MyTheme.View" parent="">
        <item name="android:background">#9E9E9E</item>
    </style>

    <style name="Widget.MyTheme.Premium.InfoTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/save_text_color</item>
        <item name="color">@color/save_text_color</item>
    </style>

    <style name="Widget.MyTheme.Premium.BlueColor" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#006bff</item>
        <item name="color">#006bff</item>
    </style>

    <!--CheckBox-->
    <style name="FilterCheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#343b4c</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="DigiFotosPreviewTopAppBar" parent="Widget.Material3.PopupMenu">
        <!--        <item name="color">@color/theme_bar_chart_primary_text</item>-->
        <!--        <item name="actionOverflowButtonStyle">@style/kababMenuIconColor</item>-->
        <item name="textAppearanceLargePopupMenu">@style/Custom.Menu.TextAppearance</item>
        <item name="popupMenuBackground">@drawable/white_card_circle_corner_background</item>
    </style>

    <style name="Custom.Menu.TextAppearance" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/menu_enable_disable</item>
    </style>

    <style name="Custom.Tabs.DigiFotos" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabBackground">@drawable/selected_tab_state</item>
        <item name="tabIndicator">@color/transparent</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/albumTitle</item>
        <item name="tabTextAppearance">@style/TextAppearance.MyApp.Tab</item>
    </style>

    <style name="Custom.ContextualActionBar" parent="Widget.Material3.ActionMode">
        <item name="background">@color/topAppbarColor</item>
        <item name="titleTextStyle">@style/Contextual.TextAppearance</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="MyTheme.TextStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/edit_text_color</item>
    </style>
    
<!--    rounded corner shapeableImageView-->
    <style name="circularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
