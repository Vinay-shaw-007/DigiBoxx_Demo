<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#100F19</item>
        <item name="iconTint">@null</item>
        <item name="android:padding">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!--Views-->
    <style name="Widget.MyTheme.View" parent="">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="Widget.MyTheme.Premium.InfoTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#54BA69</item>
        <item name="color">#54BA69</item>
    </style>

    <style name="Widget.MyTheme.Premium.BlueColor" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#8AB4F8</item>
        <item name="color">#8AB4F8</item>
    </style>


    <!--CheckBox-->
    <style name="FilterCheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#BFBFBF</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Widget.MyTheme.Button.TextButton.Disabled" parent="Widget.Material3.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.BodyMedium.Disabled</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="iconTint">@color/grayDark</item>
    </style>

    <style name="Custom.Tabs" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">#8AB4F8</item>
        <item name="tabIndicator">@drawable/selected_tab_state</item>
        <item name="tabIndicatorHeight">@dimen/_4sdp</item>
    </style>

    <style name="Custom.Tabs.DigiFotos" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabBackground">@drawable/selected_tab_state</item>
        <item name="tabIndicator">@color/transparent</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextAppearance.MyApp.Tab</item>
    </style>
</resources>
